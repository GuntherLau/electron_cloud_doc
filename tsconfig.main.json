{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "allowJs": true,
    "outDir": "./build",
    "rootDir": "./",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node", "electron"]
  },
  "include": [
    "main.ts",
    "AppWindow.ts",
    "src/utils/menuTemplate.ts",
    "src/utils/AliOssManager.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "src/components",
    "src/hooks",
    "src/*.tsx"
  ]
}