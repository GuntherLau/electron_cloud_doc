{
  "name": "cloud-doc",
  "version": "0.1.0",
  "private": true,
  "main": "main.js",
  "author": {
    "name": "Gunther Lau",
    "email": "lg8644@gmail.com"
  },
  "build": {
    "appId": "com.guntherlau.clouddoc",
    "productName": "阿里云文档",
    "copyright": "Copyright © 2021 ${author}",
    "electronDownload": {
      "mirror": "https://npm.taobao.org/mirrors/electron/"
    },
    "extends": null,
    "extraMetadata": {
      "main": "./build/main.js"
    },
    "directories": {
      "buildResources": "assets"
    },
    "files": [
      "package.json",
      "build/**/*",
      "node_modules/**/*",
      "settings/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "dmg": {
      "background": "assets/appdmg.png",
      "icon": "assets/icon.icns",
      "iconSize": 100,
      "contents": [
        {
          "x": 380,
          "y": 280,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 110,
          "y": 280,
          "type": "file"
        }
      ],
      "window": {
        "width": 500,
        "height": 500
      }
    },
    "win": {
      "target": [
        "msi",
        "nsis"
      ],
      "icon": "assets/icon.ico",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "publisherName": "Gunther Lau"
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "perMachine": false
    }
  },
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "build": "CI=false NODE_OPTIONS=--openssl-legacy-provider react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "ele": "electron .",
    "onlyEle": "nodemon --watch main.js --watch src/utils/menuTemplate.js --exec \"electron .\"",
    "dev": "concurrently \"wait-on http://localhost:3000 && electron .\" \"cross-env BROWSER=none NODE_OPTIONS=--openssl-legacy-provider npm start\"",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "prepack": "npm run build && npm run buildMain",
    "predist": "npm run build && npm run buildMain",
    "buildMain": "webpack"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "ali-oss": "^6.15.2",
    "bootstrap": "^5.0.1",
    "bootstrap-icons": "^1.5.0",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.0.0"
  },
  "devDependencies": {
    "@electron/remote": "^1.2.0",
    "@popperjs/core": "^2.9.2",
    "@testing-library/dom": "^7.31.2",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "classnames": "^2.3.1",
    "concurrently": "^6.1.0",
    "cross-env": "^7.0.3",
    "easymde": "^2.15.0",
    "electron": "^12.0.9",
    "electron-builder": "^23.0.2",
    "sass": "^1.32.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "react-simplemde-editor": "^4.1.0",
    "uuid": "^8.3.2",
    "wait-on": "^5.3.0",
    "web-vitals": "^1.0.1",
    "webpack-cli": "^4.7.2"
  }
}
